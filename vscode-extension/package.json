{
	"name": "zquest-lsp",
	"publisher": "cjamcl",
	"description": "ZScript scripting language for ZQuest Classic",
	"author": "Connor Clark",
	"license": "MIT",
	"version": "1.0.5",
	"repository": {
		"type": "git",
		"url": "https://github.com/ArmageddonGames/ZQuestClassic.git"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [{
			"id": "zscript",
			"aliases": ["ZScript", "ZQuest Classic Scripting Language"],
			"extensions": [".zs", ".zh", ".z"],
			"configuration": "./language-configuration.json"
		}],
		"grammars": [{
			"language": "zscript",
			"scopeName": "source.zscript",
			"path": "./syntaxes/zscript.tmLanguage.json"
		}],
		"configuration": {
			"type": "object",
			"title": "ZScript extension",
			"properties": {
				"zscript.installationFolder": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "ZQuest Classic folder"
				},
				"zscript.printCompilerOutput": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Prints the output of the compiler to the Output window"
				},
				"zscript.alwaysInclude": {
					"scope": "window",
					"type": "array",
					"default": ["std.zh"],
					"description": "Global includes, to be added to compile attempts."
				},
				"zscript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.1.3"
	}
}
