/** <std limits>
*	Standard sizes for minimum and maximum values in the ZScript
*	language.
*	Note that sizes other than 'int' require using functions to 
*	resize your values.
*/

const int CHAR_BIT 	= 8;		// Number of bits in one byte.
const int SHORT_BIT 	= 16;		// Number of bits in one short.
const int INT_BIT 	= 18;		// Number of bits in one int.

//8b Values
const int CHAR_MIN 	= -128;		// Minimum value of a signed byte.
const int SCHAR_MIN 	= -128;		// Minimum value of a signed byte.
const int SBYTE_MIN 	= -128;		// Minimum value of a signed byte.
const int SBYTE_MAX 	= 127;		// Maximum values of a signed byte.
const int CHAR_MAX 	= 127;		// Maximum values of a signed byte.
const int BYTE_MIN 	= 0;		// Minimum values of a signed byte.
const int SCHAR_MAX 	= 127;		// Maximum values of a signed byte.
const int UCHAR_MAX 	= 255;		// Minimum value of an unsigned byte.
const int BYTE_MAX 	= 255;		// Minimum value of an unsigned byte.
const int USHRT_MIN 	= 0;		// Minimum value of an unsigned short.
const int WORD_MIN 	= 0;		// Minimum value of an unsigned short.

//16b Values
const int SHORT_MIN 	= -32768;	// Minimum value of a signed short.
const int SSHRT_MIN 	= -32768;	// Minimum value of a signed short.
const int WORD_MAX 	= 65535;	// Maximum value of an unsigned short.
const int USHRT_MAX 	= 65535;	// Maximum value of an unsigned short.
const int SHORT_MAX 	= 32767;	// Maximum value of a signed short.
const int SSHRT_MAX 	= 32767;	// Maximum value of a signed short.

//Longer Values
const int INT_MIN 	= -214747 - (OPTION_VALUE(TRUE_INT_SIZE) ? 1 : 0);	// Minimum value of an int.
const int INT_MAX 	= 214747 + (OPTION_VALUE(TRUE_INT_SIZE) ? 1 : 0);	// Maximum value of an int.
const int LONG_MIN 	= -214747 - (OPTION_VALUE(TRUE_INT_SIZE) ? 1 : 0);	// Minimum value of an int.
const int FLOAT_MIN 	= -214747.9999 -(OPTION_VALUE(TRUE_INT_SIZE) ? 0.3649 : 0);	// Minimum value of a ZScript 'float' (int with fixed four-decimal places).
const int FLOAT_MAX 	= 214747.9999 + (OPTION_VALUE(TRUE_INT_SIZE) ? 0.3648 : 0);	// Maximum value of a ZScript 'float' (int with fixed four-decimal places).

//Game Elements
const int COUNTER_MIN 	= WORD_MIN;
const int COUNTER_MAX 	= WORD_MAX;
const int DCOUNTER_MAX 	= SHORT_MAX;
const int DCOUNTER_MIN 	= SHORT_MIN;