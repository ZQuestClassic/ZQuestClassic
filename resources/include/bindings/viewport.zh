enum ViewportMode
{
	VIEW_MODE_CENTER_AND_BOUND = 0L,
	VIEW_MODE_CENTER = 1L,
	VIEW_MODE_SCRIPT = 2L
};

class Viewport {
	// @delete
	internal Viewport();

	// @zasm_var VIEWPORT_MODE
	internal ViewportMode Mode;

	// @zasm_var VIEWPORT_X
	internal int X;

	// @zasm_var VIEWPORT_Y
	internal int Y;

	// @zasm_var VIEWPORT_WIDTH
	internal int Width;

	// @zasm_var VIEWPORT_HEIGHT
	internal int Height;
}

internal const Viewport Viewport;
