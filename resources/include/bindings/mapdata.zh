	// @deprecated Use `Item > -1` instead!
	// @zasm_var MAPDATAHASITEM
	internal int HasItem;

	// @deprecated Use [var Flag] instead!
	// @zasm_var MAPDATASCREENFLAGSD
	internal const int SFlags[];

	// Bitflags for enemies on the screen (E.Flags).
