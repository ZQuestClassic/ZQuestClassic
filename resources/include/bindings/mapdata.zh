	//
	// @zasm
	//   POP D2
	//   PEEKATV REFMAPDATA 0.0002
	//   SETR MAPDATAEXDOOR D2
	//   POPARGS D5 0.0003
	internal void SetExDoor(int dir, int index, bool state);
