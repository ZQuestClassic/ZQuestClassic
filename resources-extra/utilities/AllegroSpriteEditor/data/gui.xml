    </menu>
    
    <menu id="cel_popup">
      <item command="cel_properties" text="&amp;Properties..." />
      <separator />
      <item command="clear" text="&amp;Clear" />
    </menu>
    
    <menu id="cel_movement_popup">
      <item command="move_cel" text="&amp;Move" />
