	<separator />
	<item command="new_frame" text="&amp;New Frame" />
	<item command="remove_frame" text="&amp;Remove Frame" />
	<separator />
	<menu text="&amp;Jump to">
	  <item command="goto_first_frame" text="&amp;First Frame" />
